<Window x:Class="ShadowLines.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 PlaceholderText="Digite seu nome" />
        <TextBox Text="{Binding IdText, UpdateSourceTrigger=PropertyChanged}" 
                 PlaceholderText="Digite seu ID" />
        <Button Content="Login" Command="{Binding LoginCommand}" Margin="0,10,0,0"/>
    </StackPanel>
</Window>

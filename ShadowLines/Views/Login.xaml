<Window x:Class="ShadowLines.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="301">
    <Grid>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="79,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtNome_TextChanged"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="79,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" TextChanged="txtID_TextChanged"/>
        <Button x:Name="btnLogin" Content="Button" HorizontalAlignment="Left" Margin="119,196,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ShadowLines.Login"
        mc:Ignorable="d"
        Title="Login" Height="537" Width="477">
    <Grid Margin="0,10,0,5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,372,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.293,0.432" Height="34" Width="136" FontFamily="Arial Rounded MT Bold" FontSize="16" BorderThickness="1,1,1,1" Background="Black" Foreground="White"/>
        <Rectangle Stroke="Black" Fill="Black" Margin="0,-10,0,300"/>
        <Ellipse HorizontalAlignment="Center" Height="110" Margin="0,129,0,0" Stroke="White" VerticalAlignment="Top" Width="525" Fill="White"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="152,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.079,-0.555" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16" Background="White" Foreground="Black"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="152,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.555" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16" Foreground="Black"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Center" Margin="0,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="22"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Center" Margin="0,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="22" SelectionBrush="Red"/>
        <Label Content="Shadows &amp; Lines" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Broadway" Height="39" Width="208" FontSize="22" Background="#FF020202"/>
        <TextBlock HorizontalAlignment="Left" Margin="118,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="248"><Run Language="pt-br" Text="__________________________________________________"/></TextBlock>
        <Image Margin="160,58,155,305" Source="/Images/ImgLogo.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.95"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>

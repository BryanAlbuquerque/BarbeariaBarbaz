<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowLines"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ShadowLines.Login"
        mc:Ignorable="d"
        Title="Login" Height="537" Width="477">
    <Grid Margin="0,10,0,5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,372,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.293,0.432" Height="34" Width="136" FontFamily="Arial Rounded MT Bold" FontSize="16" BorderThickness="1,1,1,1" Background="Black" Foreground="White"/>
        <Rectangle Stroke="Black" Fill="Black" Margin="0,-10,0,300"/>
        <Ellipse HorizontalAlignment="Center" Height="110" Margin="0,129,0,0" Stroke="White" VerticalAlignment="Top" Width="525" Fill="White"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="155,211,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.555" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="155,266,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.555" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="155,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="22"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="155,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="22"/>
        <Label Content="Shadows &amp; Lines" HorizontalAlignment="Left" Margin="145,19,0,0" VerticalAlignment="Top" Foreground="#FF71FF00" FontFamily="Broadway" Height="39" Width="208" FontSize="22"/>
        <Image x:Name="imgLogo" Margin="178,49,163,322" Source="/ImgLogo.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-9.238"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
